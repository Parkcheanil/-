<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.petworld.mapper.PetMapper">
	
	<!-- 펫 등록 -->
	<insert id="petRegistForm">
		insert into pet(pNum, pPhoto, pName, pYear, pMonth, pWeight, pFirst, uploadpath, fileloca, filename)
		values(pet_seq.nextval, #{pphoto}, #{pname}, #{pyear}, #{pmonth}, #{pweight}, #{pfirst}, #{uploadpath}, #{fileloca}, #{filename})
	</insert>
	
	<!-- 펫 목록 -->
	<select id="getList" resultType="PetVO">
		select * from pet
	</select>
	
	<select id="petInfo" resultType="PetVO">
		select * from pet where pnum = #{pnum}
	</select>
	
	<!-- 펫 정보 이미지 삭제 -->
	<delete id="petInfoUpdate">
		delete from pet where pNum = #{pnum}
	</delete>

	<!-- 펫 삭제 -->
	<delete id="petDelete">
		delete from pet where pnum = #{pnum}
	</delete>

</mapper>